{
  "plugins": ["prettier-plugin-solidity"],
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "compiler": ">=0.8.20 <0.9.0",
        "parser": "slang",
        "tabWidth": 4,
        "singleQuote": false,
        "printWidth": 120,
        "useTabs": false,
        "bracketSpacing": true
      }
    }
  ]
}
